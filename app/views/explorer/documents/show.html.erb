<% content_for :sidebar do %>
<%= render :partial => "shared/collections_sidebar" %>
<% end %>

<% if current_document %>
<div class="page-header">
  <h3 class="di"><%= link_to current_collection_name, explorer_collection_path(current_database_name, current_collection_name) %> / <%= current_document_id %></h3>
  <small><%= link_to "Edit Document", edit_explorer_collection_document_path(current_database_name, current_collection_name, current_document_id), class: "btn pull-right" %></small>
</div>

<pre><%= current_document.to_json %></pre>
<% else %>
<div class="alert alert-error">
  <strong>Error!</strong>
  That document doesn't exist
</div>
<% end %>